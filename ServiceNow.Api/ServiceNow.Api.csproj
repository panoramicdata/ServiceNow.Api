<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<Authors>David Bond, Daniel Abbatt</Authors>
		<Company>Panoramic Data Limited</Company>
		<Description>A ServiceNow REST API client</Description>
		<Copyright>Copyright © Panoramic Data Limited 2019</Copyright>
		<PackageLicense>Apache-2.0</PackageLicense>
		<PackageProjectUrl>https://www.nuget.org/packages/ServiceNow.Api/</PackageProjectUrl>
		<PackageIconUrl>https://connectoricons-prod.azureedge.net/service-now/icon_1.0.1093.1311.png</PackageIconUrl>
		<PackageTags>ServiceNow API</PackageTags>
		<PackageReleaseNotes>Added support for Options.ValidateCountItemsReturnedTolerance to allow the validation to be within the expected total, plus or minus this tolerance</PackageReleaseNotes>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<LangVersion>7.3</LangVersion>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Logging" Version="2.2.0" />
		<PackageReference Include="Nerdbank.GitVersioning" Version="3.0.25">
		  <PrivateAssets>all</PrivateAssets>
		  <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
	</ItemGroup>

	<ItemGroup>
		<AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
			<_Parameter1>$(MSBuildProjectName).Test</_Parameter1>
		</AssemblyAttribute>
	</ItemGroup>

</Project>
